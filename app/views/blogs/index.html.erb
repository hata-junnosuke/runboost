<div class="container">
  <h1>走りの記録</h1>
  <!-- カレンダー -->
  <div class="col-xl-12 col-lg-7">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">ワークアウト</h6>
        <%= link_to "記録する", new_blog_path, class: "btn btn-primary" %>
      </div>
      <div class="card-body">
        <div class="chart-area">
          <%= month_calendar events: @blogs do |date, blogs| %>
            <%= date.day %>
            <% blogs.each do |blog| %>
              <div><%= link_to blog.content, blog %> </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>  


  <br>
  <!-- 今月の距離 -->
  <div class="col-xl-12 col-lg-7">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">今月の距離</h6>
      </div>
      <div class="card-body">
        <div class="chart-area">
          <%= bar_chart @blogs.this_month.group_by_month(:start_time,format:"%Y-%m").sum(:distance), min: 0, max: 200, height: "200px", colors: ["#0099FF"] ,xtitle: "距　離" ,suffix: "Km"%>
        </div> 
      </div>
    </div>
  </div>  
    
  <br>
  <!-- ログ -->
  <div class="col-xl-12 col-lg-7">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">過去ログ</h6>
      </div>
      <div class="card-body">
        <div class="chart-area">
          <div id="blog">
            <%= render :partial => "blog" %> 
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
</div>
