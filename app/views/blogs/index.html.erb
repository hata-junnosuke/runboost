<p id="notice"><%= notice %></p>

<h1>走りの記録</h1>


<%= link_to '記録をかく', new_blog_path %>

<%= month_calendar events: @blogs do |date, blogs| %>
  <%= date.day %>

  <% blogs.each do |blog| %>
    <div>
      <%= link_to blog.title, blog %>
    </div>
  <% end %>
<% end %>

<br>

<h1>今月の距離</h1>

<%= bar_chart @blogs.this_month.group_by_month(:start_time).sum(:distance), min: 0, max: 200, width: "1500px", height: "200px", colors: ["#0099FF"] %>

<br>

<h1>最新ログ</h1>

<table>
  <thead>
    <tr>
      <th>メニュー</th>
      <th>距離</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.distance %></td>
        <td><%= blog.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '詳細', blog_path(blog.id) %></td>
        <td><%= link_to '編集', edit_blog_path(blog.id) %></td>
        <td><%= link_to '削除',blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
