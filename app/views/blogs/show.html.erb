<div class="container">
  <div class="text-center">
    <p>
      <strong>日　時</strong><br>
      <%= @blog.start_time.strftime("%Y-%m-%d") %>
    </p>
    
    <br>
    
    <p>
      <strong>メニュー</strong><br>
      <%= @blog.content %>
    </p>
    
    <br>
    
    <p>
      <strong>距　離</strong><br>
      <%= @blog.distance %> Km
    </p>
    
    <br>
    
    <p>
      <strong>コメント</strong><br>
      <%=safe_join(@blog.comment.split("\n"),tag(:br))%>
    </p>
    
    <br>
   
    <%= link_to '編集', edit_blog_path(@blog), class: "btn btn-primary" %> |
    <%= link_to '削除',blog_path(@blog), method: :delete, data: { confirm: '記録を削除します。本当によろしいですか。' }, class: "btn btn-danger" %> |
    <%= link_to '戻る', blogs_path %>
  </div>
</div>