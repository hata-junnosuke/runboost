<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p> 
<div class="container">
    <div class="text-center">
      <%= form_for @user do |f| %>
        <div class="field">
          <%= f.label :username %><br>
          <%= f.text_field :username %>
        </div>
        <div class="field">
          <%= f.label :email %><br>
          <%= f.text_field :email %>
        </div>  
        <div class="field">
          <%= f.label :profile %><br>
          <%= f.text_field :profile %>
        </div>  
        <div class="field">
          <%= f.label :profile_image %><br>
          <%= f.attachment_field :profie_image %>
        </div>
        
        <div class="field">
          <%= f.submit "更新" %>
        </div>  
        
      <% end %>
      <%= form_with(model: Goal, local: true) do |form| %>
        <div class="goal">
          <%= form.label :goal %><br>
          <%= form.number_field :distance %>
        </div>
        
         <div class="time">
          <%= form.label :date %><br>
          <%= form.date_select :date, { discard_day: true, use_month_numbers: true} %>
        </div>
        
        <div class="submit">
          <%= form.submit "更新" %>
        </div>
        
      <% end %>
            
     
    </div>
  </div>  