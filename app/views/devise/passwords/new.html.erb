<h2>パスワードの再設定</h2>

<div class="container">
  <div class="text-center">
    <h1><span class="fas fa-bolt"></span>
        runboost
　  </h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin"} ) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      
      <br>
      
      <div class="actions">
        <%= f.submit "パスワードを送信", class: "btn btn-primary"%>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>